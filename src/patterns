%{
    #include <stdlib.h>
    #include <string.h> //strdup
    #include "common.h"
    #include "lambda.hpp"
    void yyerror(char *);
%}

%%

[a-z]+   {yylval = strdup(yytext);
          return VARIABLE;}
[().]    {return *yytext;}
λ        {return LAM;}  /* Flex is 8-bit so λ is >1 bytes so can't be in a [] */
L        {return LAM;}
\\       {return LAM;}  /* It kinda looks like λ and is easier to type */
:        {return REPL_ESCAPE;}
[ \t\n]  {;}
<<EOF>>  {return END;}

.        {yyerror("invalid character");}

%%
